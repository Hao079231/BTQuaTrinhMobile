        android:layout_height="wrap_content"
        android:id="@+id/buttonRnd"
        android:layout_marginTop="92dp"
        android:layout_alignTop="@id/textViewSo"
        android:layout_centerInParent="true"
        android:text="Sinh số ngẫu nhiên"/>

</RelativeLayout>